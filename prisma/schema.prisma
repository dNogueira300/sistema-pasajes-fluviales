// prisma/schema.prisma
generator client {
  provider   = "prisma-client"
  output     = "../src/generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  password  String
  nombre    String
  apellido  String
  role      UserRole @default(VENDEDOR)
  activo    Boolean  @default(true)
  
  // CAMPOS PARA OPERADOR DE EMBARCACIÓN (CU008)
  embarcacionAsignadaId String?   // Embarcación asignada (solo para OPERADOR_EMBARCACION)
  fechaAsignacion       DateTime? // Fecha de asignación de embarcación
  estadoOperador        String?   // ACTIVO/INACTIVO (solo para OPERADOR_EMBARCACION)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relaciones 
  ventas              Venta[]
  anulaciones         Anulacion[]
  controlesEmbarque   ControlEmbarque[] // Registros de embarque realizados por el operador
  embarcacionAsignada Embarcacion? @relation(fields: [embarcacionAsignadaId], references: [id])

  // ÍNDICES OPTIMIZADOS PARA LOGIN
  @@index([email])
  @@index([username])
  @@index([activo])
  @@index([email, activo])
  @@index([username, activo])
  @@index([embarcacionAsignadaId])
  @@index([role, estadoOperador])

  @@map("usuarios")
}

model PuertoEmbarque {
  id          String   @id @default(cuid())
  nombre      String   @unique
  descripcion String?
  direccion   String?
  activo      Boolean  @default(true)
  orden       Int      @default(0)  // Para ordenar los puertos
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  ventas      Venta[]

  @@index([activo])
  @@index([orden])

  @@map("puertos_embarque")
}

model Ruta {
  id               String            @id @default(cuid())
  nombre           String            @unique
  puertoOrigen     String
  puertoDestino    String
  precio           Decimal           @db.Decimal(10, 2)
  activa           Boolean           @default(true)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  embarcacionRutas EmbarcacionRuta[]
  ventas           Venta[]
  controlesEmbarque ControlEmbarque[]

  @@index([activa])
  @@index([puertoOrigen, puertoDestino])

  @@map("rutas")
}

model Embarcacion {
  id               String            @id @default(cuid())
  nombre           String            @unique
  capacidad        Int
  estado           EstadoEmbarcacion @default(ACTIVA)
  tipo             String?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  embarcacionRutas EmbarcacionRuta[]
  ventas           Venta[]
  controlesEmbarque ControlEmbarque[]
  operadoresAsignados User[] // Operadores asignados a esta embarcación

  @@index([estado])
  @@map("embarcaciones")
}

model EmbarcacionRuta {
  id            String      @id @default(cuid())
  embarcacionId String
  rutaId        String
  horasSalida   String[]
  diasOperacion String[]
  activa        Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  embarcacion   Embarcacion @relation(fields: [embarcacionId], references: [id])
  ruta          Ruta        @relation(fields: [rutaId], references: [id])

  @@unique([embarcacionId, rutaId])
  @@map("embarcacion_rutas")
}

model Cliente {
  id           String   @id @default(cuid())
  dni          String   @unique
  nombre       String
  apellido     String
  telefono     String?
  nacionalidad String   @default("Peruana")
  email        String?
  direccion    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  ventas       Venta[]

  // Índices para optimización de consultas
  @@index([dni])
  @@index([nombre, apellido])
  @@index([apellido])

  @@map("clientes")
}

model Venta {
  id              String      @id @default(cuid())
  numeroVenta     String      @unique
  clienteId       String
  rutaId          String
  embarcacionId   String
  userId          String
  puertoEmbarqueId String 
  fechaViaje      DateTime
  horaEmbarque    String
  horaViaje       String
  cantidadPasajes Int         @default(1)
  puertoOrigen    String
  puertoDestino   String
  precioUnitario  Decimal     @db.Decimal(10, 2)
  subtotal        Decimal     @db.Decimal(10, 2)
  impuestos       Decimal     @default(0) @db.Decimal(10, 2)
  total           Decimal     @db.Decimal(10, 2)
  // CAMPOS PARA PAGO HÍBRIDO
  tipoPago         String      @default("UNICO") // "UNICO" o "HIBRIDO"
  metodoPago       String      @default("EFECTIVO")
  metodosPago      Json?       // Array de métodos para pago híbrido
  estado          EstadoVenta @default(CONFIRMADA)
  observaciones   String?
  fechaVenta      DateTime    @default(now())
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  // Relaciones
  cliente         Cliente     @relation(fields: [clienteId], references: [id])
  embarcacion     Embarcacion @relation(fields: [embarcacionId], references: [id])
  ruta            Ruta        @relation(fields: [rutaId], references: [id])
  vendedor        User        @relation(fields: [userId], references: [id])
  puertoEmbarque  PuertoEmbarque @relation(fields: [puertoEmbarqueId], references: [id]) 
  anulacion       Anulacion?
  controlEmbarque ControlEmbarque? // Relación con el control de embarque

  // Índices para optimización de consultas
  @@index([fechaVenta])
  @@index([estado])
  @@index([rutaId, embarcacionId, fechaViaje, horaViaje, estado])
  @@index([clienteId])
  @@index([numeroVenta])
  @@index([userId])
  @@index([fechaVenta, estado])
  @@index([userId, fechaVenta])
  @@index([rutaId])
  @@index([embarcacionId])

  @@map("ventas")
}

// Modelo para llevar el contador diario de ventas
model ContadorVentas {
  id        String   @id @default(cuid())
  fecha     String   @unique // Formato: YYMMDD (ejemplo: "241225" para 25 dic 2024)
  contador  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([fecha])
  @@map("contador_ventas")
}

// Modelo para registrar anulaciones
model Anulacion {
  id            String   @id @default(cuid())
  ventaId       String   @unique
  motivo        String   // Motivo de la anulación
  observaciones String?  // Observaciones adicionales
  usuarioId     String   // Usuario que anula
  fechaAnulacion DateTime @default(now())
  asientosLiberados Int    // Cantidad de asientos liberados
  montoReembolso Decimal? @db.Decimal(10, 2) // Monto a reembolsar si aplica
  tipoAnulacion String   @default("ANULACION") // "ANULACION" o "REEMBOLSO"
  
  // Relaciones
  venta    Venta @relation(fields: [ventaId], references: [id])
  usuario  User  @relation(fields: [usuarioId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("anulaciones")
}

// NUEVO MODELO PARA CU009 - Control de Embarque/Desembarque
model ControlEmbarque {
  id              String          @id @default(cuid())
  ventaId         String          @unique
  operadorId      String
  embarcacionId   String
  rutaId          String
  fechaViaje      DateTime
  horaViaje       String
  estadoEmbarque  EstadoEmbarque  @default(PENDIENTE)
  tipoRegistro    TipoRegistro    @default(EMBARQUE)
  horaRegistro    DateTime?       // Hora en que se marcó como embarcado/no embarcado
  observaciones   String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  // Relaciones
  venta           Venta           @relation(fields: [ventaId], references: [id], onDelete: Cascade)
  operador        User            @relation(fields: [operadorId], references: [id])
  embarcacion     Embarcacion     @relation(fields: [embarcacionId], references: [id])
  ruta            Ruta            @relation(fields: [rutaId], references: [id])
  
  // Índices para optimización de consultas
  @@index([ventaId])
  @@index([operadorId])
  @@index([embarcacionId])
  @@index([rutaId])
  @@index([fechaViaje])
  @@index([horaViaje])
  @@index([estadoEmbarque])
  @@index([embarcacionId, fechaViaje, horaViaje])
  @@index([embarcacionId, fechaViaje, estadoEmbarque])
  @@index([operadorId, fechaViaje])
  
  @@map("control_embarque")
}

model Configuracion {
  id        String   @id @default(cuid())
  clave     String   @unique
  valor     String
  tipo      String   @default("STRING")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clave])
  @@map("configuraciones")
}

// ENUMS
enum UserRole {
  ADMINISTRADOR
  VENDEDOR
  OPERADOR_EMBARCACION  // Nuevo rol para CU008
}

enum EstadoEmbarcacion {
  ACTIVA
  MANTENIMIENTO
  INACTIVA
}

enum EstadoVenta {
  CONFIRMADA
  ANULADA
  REEMBOLSADA
}

// NUEVOS ENUMS PARA CU009
enum EstadoEmbarque {
  PENDIENTE
  EMBARCADO
  NO_EMBARCADO
}

enum TipoRegistro {
  EMBARQUE
  DESEMBARQUE
}
